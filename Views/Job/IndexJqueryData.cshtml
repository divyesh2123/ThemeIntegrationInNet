@section Scripts {
  <script>
      var dataTable;
    $(document).ready(function () {
            dataTable = $("#job").DataTable({
                "ajax": {
                    "url": "/Job/DisplayData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "jobTitle" },
                    { "data": "jobId" },
                    { "data": "jobDescription" },

                ],
                "language": {

                    "emptyTable": "No data found"
                }
            });
        });
  
  </script>
}